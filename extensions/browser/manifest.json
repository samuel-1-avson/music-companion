{
  "manifest_version": 3,
  "name": "Music Companion",
  "version": "1.0.0",
  "description": "Smart music suggestions based on your browsing activity",
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "http://localhost:3001/*",
    "http://localhost:5173/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
